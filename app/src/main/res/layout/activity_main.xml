<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f8efd4">

    <EditText
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:text=""
        android:textColor="#132743"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end"></EditText>
    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="#132743"
        android:textSize="56dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculation"
        android:gravity="end"></EditText>
    <Button
        android:id="@+id/btnAC"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="CLEAR"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result"
        android:layout_marginLeft="5dp"></Button>
    <Button
        android:id="@+id/btnDel"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="DELETE"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/result"
        android:layout_marginLeft="5dp"
        ></Button>
    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="1"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/btnAC"
        ></Button>
    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="2"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/btnAC"
        ></Button>
    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="3"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/btnDel"
        app:layout_constraintTop_toBottomOf="@id/btnAC"
        ></Button>
    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="4"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        ></Button>
    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="5"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        ></Button>
    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="6"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/btnDel"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        ></Button>
    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="7"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        ></Button>
    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="8"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/btn4">
    </Button>
    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="9"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/btnDel"
        app:layout_constraintTop_toBottomOf="@id/btn4"></Button>
    <Button
        android:id="@+id/btnDiv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#d7385e"
        android:textColor="#132743"
        android:text="/"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@id/btnDel"
        app:layout_constraintTop_toBottomOf="@id/btnAC"
        ></Button>
    <Button
        android:id="@+id/btnMult"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#d7385e"
        android:textColor="#132743"
        android:text="x"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@id/btnDel"
        app:layout_constraintTop_toBottomOf="@id/btnDiv"
        ></Button>
    <Button
        android:id="@+id/btnMin"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#d7385e"
        android:textColor="#132743"
        android:text="-"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@id/btnDel"
        app:layout_constraintTop_toBottomOf="@id/btnMult"
        ></Button>
    <Button
        android:id="@+id/btn0"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="0"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/btn7">
    </Button>
    <Button
        android:id="@+id/btnDot"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#edc988"
        android:textColor="#132743"
        android:text="."
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/btnAC"
        app:layout_constraintTop_toBottomOf="@id/btn7">
    </Button>
    <Button
        android:id="@+id/btnPlus"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#d7385e"
        android:textColor="#132743"
        android:text="+"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="@id/btnDel"
        app:layout_constraintTop_toBottomOf="@id/btnMin"
        ></Button>
    <Button
        android:id="@+id/btnEquals"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:backgroundTint="#d7385e"
        android:textColor="#132743"
        android:text="="
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@id/btnDel"
        app:layout_constraintTop_toBottomOf="@id/btnMin"
        ></Button>


</androidx.constraintlayout.widget.ConstraintLayout>